{
    "name": "mizar-extension",
    "displayName": "Mizar extension",
    "description": "An extension for VS Code which provides support for the Mizar language.",
    "version": "0.0.1",
    "publisher": "fpsbpkm",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mimosa-project/emvscode"
    },
    "activationEvents": [
        "onCommand:mizar-verify",
        "onCommand:mizar-verify2",
        "onCommand:mizar-irrths",
        "onCommand:mizar-relinfer",
        "onCommand:mizar-trivdemo",
        "onCommand:mizar-reliters",
        "onCommand:mizar-relprem",
        "onCommand:mizar-irrvoc",
        "onCommand:mizar-inacc"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "category": "Mizar",
                "command": "mizar-verify",
                "title": "mizar-verify"
            },
            {
                "category": "Mizar",
                "command": "mizar-verify2",
                "title": "mizar-verify2"
            },
            {
                "category": "Mizar",
                "command": "mizar-irrths",
                "title": "mizar-irrths"
            },
            {
                "category": "Mizar",
                "command": "mizar-relinfer",
                "title": "mizar-relinfer"
            },
            {
                "category": "Mizar",
                "command": "mizar-trivdemo",
                "title": "mizar-trivdemo"
            },
            {
                "category": "Mizar",
                "command": "mizar-reliters",
                "title": "mizar-reliters"
            },
            {
                "category": "Mizar",
                "command": "mizar-relprem",
                "title": "mizar-relprem"
            },
            {
                "category": "Mizar",
                "command": "mizar-irrvoc",
                "title": "mizar-irrvoc"
            },
            {
                "category": "Mizar",
                "command": "mizar-inacc",
                "title": "mizar-inacc"
            }
        ],
        "languages": [
            {
                "id": "Mizar",
                "aliases": [
                    "Mizar",
                    "Mizar"
                ],
                "extensions": [
                    ".miz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "Mizar",
                "scopeName": "source.miz",
                "path": "./syntaxes/Mizar.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "icon":"images/mizar.png"
}
